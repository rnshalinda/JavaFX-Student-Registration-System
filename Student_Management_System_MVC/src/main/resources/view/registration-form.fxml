<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="592.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.icet.sms.controller.RegistrationFormContoller">
   <children>
      <Label layoutX="14.0" layoutY="10.0" text="Student Registration">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <Label layoutX="97.0" layoutY="102.0" text="Full Name : ">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <Label layoutX="97.0" layoutY="150.0" text="Email : ">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <Label layoutX="97.0" layoutY="195.0" text="Gender : ">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <Label layoutX="99.0" layoutY="242.0" text="Course : ">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <TextField fx:id="txt_name" layoutX="233.0" layoutY="101.0" prefHeight="27.0" prefWidth="254.0" />
      <TextField fx:id="txt_course" layoutX="233.0" layoutY="241.0" prefHeight="27.0" prefWidth="254.0" />
      <TextField fx:id="txt_email" layoutX="233.0" layoutY="149.0" prefHeight="27.0" prefWidth="254.0" />
      <CheckBox fx:id="chk_M" layoutX="248.0" layoutY="198.0" mnemonicParsing="false" onAction="#selectMale" text="M" />
      <CheckBox fx:id="chk_F" layoutX="294.0" layoutY="198.0" mnemonicParsing="false" onAction="#selectFemale" text="F" />
      <Button fx:id="btn_reset" layoutX="288.0" layoutY="291.0" mnemonicParsing="false" onAction="#resetRegForm" text="Reset" textFill="#da2b2b">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Button fx:id="btn_submit" defaultButton="true" layoutX="365.0" layoutY="291.0" mnemonicParsing="false" onAction="#addStuDetails" text="Submit" textFill="#2c58bf">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Button fx:id="btn_viewSummary" layoutX="432.0" layoutY="40.0" mnemonicParsing="false" onAction="#viewSummaryAction" text="View Summary" textFill="#592f9c">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Button>
      <Button fx:id="btn_logout" layoutX="507.0" layoutY="348.0" mnemonicParsing="false" onAction="#logoutAction" text="Logout" textAlignment="CENTER">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
